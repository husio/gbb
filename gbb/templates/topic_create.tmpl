{{template "header.tmpl"}}

<style>
textarea { min-height: 400px; }
</style>

<form method="POST" action="." enctype="multipart/form-data" autocomplete="off">
  <fieldset>
    <input type="text" name="subject" value="{{.Subject}}" placeholder="Subject" required>
    {{if .Errors.Subject -}}
      <div>{{.Errors.Subject}}</div>
    {{- end}}
  </fieldset>

  <fieldset>
    <textarea name="content" placeholder="Content" required>{{.Content}}</textarea>
      Use <a href="https://gist.github.com/budparr/9257428">markdown</a> to format content.
    {{if .Errors.Content -}}
      <div>{{.Errors.Content}}</div>
    {{- end}}
  </fieldset>

  {{.CsrfField}}

  <button type="submit">Create</button>
  or abort and go back to <a href="/t/">topics list</a>.
</form>
